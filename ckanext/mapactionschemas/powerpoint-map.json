{
  "scheming_version": 1,
  "dataset_type": "powerpoint-map",
  "about": "MapAction PowerPoint Map schema",
  "about_url": "http://www.mapaction.org/",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "country-iso3",
      "label": "Country ISO 3",
      "required": true
    },
    {
      "field_name": "language-iso2",
      "label": "Language ISO 2",
      "required": true
    },
    {
      "field_name": "parentID",
      "label": "Parent ID",
      "required": true
    },
    {
      "field_name": "principal-country-iso3",
      "label": "Principal country ISO 3",
      "required": true
    },
    {
      "field_name": "access",
      "label": "Access"
    },
    {
      "field_name": "countries",
      "label": "Countries"
    },
    {
      "field_name": "createdate",
      "label": "Create date",
      "required": true
    },
    {
      "field_name": "createtime",
      "label": "Create time",
      "required": true
    },
    {
      "field_name": "datasource",
      "label": "Data source",
      "required": true
    },
    {
      "field_name": "datum",
      "label": "Datum"
    },
    {
      "field_name": "glideno",
      "label": "Glide Number",
      "required": true
    },
    {
      "field_name": "jpgfilename",
      "label": "JPG filename"
    },
    {
      "field_name": "kmzfilename",
      "label": "KMZ filename"
    },
    {
      "field_name": "language",
      "label": "Language"
    },
    {
      "field_name": "mapNumber",
      "label": "Map number",
      "required": true
    },
    {
      "field_name": "papersize",
      "label": "Paper size"
    },
    {
      "field_name": "pdffilename",
      "label": "PDF file name"
    },
    {
      "field_name": "pdffilesize",
      "label": "PDF file size"
    },
    {
      "field_name": "pdfresolutiondpi",
      "label": "PDF resolution DPI"
    },
    {
      "field_name": "qclevel",
      "label": "QC level"
    },
    {
      "field_name": "ref",
      "label": "Ref"
    },
    {
      "field_name": "reliefweb_theme_id_hint",
      "label": "Reliefweb Theme ID hint"
    },
    {
      "field_name": "scale",
      "label": "Scale"
    },
    {
      "field_name": "sourceorg",
      "label": "Source Org"
    },
    {
      "field_name": "vulnerablepeople",
      "label": "Vulnerable People"
    },
    {
      "field_name": "xmax",
      "label": "X max"
    },
    {
      "field_name": "xmin",
      "label": "X min"

    },
    {
      "field_name": "ymax",
      "label": "Y max"
    },
    {
      "field_name": "ymin",
      "label": "Y min"
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0",
      "required": true
    },
    {
      "field_name": "product_themes",
      "label": "Themes",
      "preset": "select",
      "form_placeholder": "eg. economy, mental health, government",
      "vocabulary": "product_themes",
      "choices_helper": "mapactionschemas_vocabulary_choices",
      "required": true
    },
    {
      "field_name": "data_update_frequency",
      "label": "Data update frequency"
    },
    {
      "field_name": "methodology",
      "label": "Methodology"
    },
    {
      "field_name": "methodology_other",
      "label": "Methodology other"
    },
    {
      "field_name": "number_of_pages",
      "label": "Number of pages",
      "form_placeholder": "",
      "validators": "int_validator equals_one"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    },
    {
      "field_name": "hash",
      "label": "Hash"
    }
  ]
}
